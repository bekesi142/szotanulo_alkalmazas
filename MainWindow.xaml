<Window x:Class="szotanulo_alkalmazas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:szotanulo_alkalmazas"
        mc:Ignorable="d"
        Title="Főmenü" Height="350" Width="525">
    <Grid>
        <!-- Főmenü Grid -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Lenyíló lista -->
            <ComboBox x:Name="DifficultyComboBox" Width="200" Margin="10">
                <ComboBoxItem Content="Könnyű" />
                <ComboBoxItem Content="Közepes" />
                <ComboBoxItem Content="Nehéz" />
            </ComboBox>

            <!-- Indítás gomb -->
            <Button Content="Indítás" Width="100" Height="30" Margin="10" Click="StartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
